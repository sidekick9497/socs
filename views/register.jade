extends layout
block header
   h1 Register
block content
   .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Enter Details
        form(method='POST' action='/login')
          div.form-group
            label(for='first_name') First Name
            input.form-control(type='text' id='fn' placeholder='first Name' name='fn')
          
          div.form-group
            label(for='last_name') last Name
            input.form-control(type='text' id='ln' placeholder='last Name' name='ln')

         div.form-group
            label(for='email') email
            input.form-control(type='text' id='email' placeholder='you@example.com' name='email')

          div.form-group
            label(for='id') Id
            input.form-control(type='text' id='e_id' placeholder='A1B2C3' name='id')

          button.btn.btn-primary(type='submit') Register 
    
block pageScripts
    